<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.noctisdrakon.plifmx.LoginFragment"
    android:orientation="vertical"
    android:gravity="center"
    >

    <!-- TODO: Update blank fragment layout -->

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="0dp"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/logoplif"
            android:src="@drawable/logoplif"
            android:alpha="1.0"
            android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bordes_linearlayout"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView4"
                    android:src="@drawable/mailplif"
                    android:alpha="0.75"
                    android:layout_marginRight="5dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    android:hint="Correo Electrónico"
                    android:inputType="textEmailAddress"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textColorHint="#CAD1D5"
                    android:background="#00000000"
                    />

            </LinearLayout>

            <!-- Aqui empieza la contraseña -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bordes_linearlayout"
                android:padding="10dp"
                android:layout_marginTop="5dp"
                >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:id="@+id/imageView5"
                    android:src="@drawable/lockplif"
                    android:alpha="0.75"
                    android:layout_marginRight="5dp"/>


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/password"
                    android:hint="Contraseña"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:textColorHint="#CAD1D5"
                    android:background="#00000000"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iniciar Sesión"
                android:id="@+id/login"
                android:textSize="15dp"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@drawable/boton_iniciar"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Olvidé mi contraseña"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:id="@+id/forgot"
                android:textColor="@color/plif_gris_texto_irreelevante"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reenviar instrucciones de activación"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:id="@+id/resend"
                android:textColor="@color/plif_gris_texto_irreelevante"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O bien"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:id="@+id/orso"
                android:textColor="@color/plif_color_naranja"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:minHeight="1dp"
                android:background="@color/plif_color_naranja"
                >

            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/azul_facebook">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="80"
            android:layout_height="wrap_content"
           >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ingresa con Facebook"
            android:textColor="#ffffff"
            android:id="@+id/textView3" />

            </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            >

        <ImageView
            android:layout_width="25dp"
            android:layout_gravity="right"
            android:layout_height="25dp"
            android:id="@+id/facelogin"
            android:src="@drawable/face"/>

            </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Aún no tienes cuenta? Regístrate Aquí"
        android:id="@+id/reghere"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
